{{#liquid-spacer growEasing="easeOutQuint"}}
  {{#liquid-if hasMessage class="app-message"}}
    {{#if errorMessage}}
      <div class="uk-alert uk-alert-warning uk-width-1-2 uk-container-center">
        <p><strong>{{t "error.intro"}}</strong> {{errorMessage}}</p>
      </div>
    {{/if}}

    {{#if infoMessage}}
      <div class="uk-alert uk-alert-success uk-width-1-2 uk-container-center">
        <p>{{infoMessage}}</p>
      </div>
    {{/if}}
  {{/liquid-if}}
{{/liquid-spacer}}

<form class="uk-form uk-form-stacked uk-panel uk-panel-box uk-panel-box-primary uk-width-1-2 uk-container-center"
    {{action 'onSubmit' on='submit'}}>
  {{#liquid-spacer growEasing="easeOutQuint"}}
    <fieldset class="uk-width-1-1">
      <div class="uk-form-row">
        <label for="identification" class="uk-form-label">{{t 'login.nodeId.label'}}</label>
        <div class="uk-form-controls">
          {{input value=identification placeholder=(t 'login.nodeId.placeholder') class='uk-width-1-1'}}
        </div>
      </div>
      {{#liquid-if showToken class="show-token"}}
        <div class="uk-form-row">
          <label for="token" class="uk-form-label">{{t 'login.authToken.label'}}</label>
          <div class="uk-form-controls">
            {{input value=token placeholder=(t 'login.authToken.placeholder') class='uk-width-1-1'}}
          </div>
        </div>
        <div class="uk-form-row">
          <label for="secret" class="uk-form-label">{{t 'login.authSecret.label'}}</label>
          <div class="uk-form-controls">
            {{input value=secret placeholder=(t 'login.authSecret.placeholder') type='password' class='uk-width-1-1'}}
          </div>
        </div>
      {{else}}
        <div class="uk-form-row">
          <label>
            {{input type="checkbox" name="showToken" checked=showToken}}
            {{t "login.showToken"}}
          </label>
        </div>
      {{/liquid-if}}
    </fieldset>
  {{/liquid-spacer}}
	<br>
	<button type="submit" class="uk-button uk-button-primary uk-width-1-1" disabled={{isProcessing}}>{{t "login.submit"}}</button>
</form>
