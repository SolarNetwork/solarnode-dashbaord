<legend>{{t 'data-props.edit.source.heading' name=sourceConfig.displayName}}</legend>
<fieldset>
	<div class="uk-form-row">
    <label for="displayName" class="uk-form-label">{{t 'data-props.edit.source.id'}}</label>
    <div class="uk-form-controls uk-form-controls-text">
      {{sourceConfig.source}}
		</div>
	</div>
	<div class="uk-form-row">
    <label for="displayName" class="uk-form-label">{{t 'data-props.edit.source.title'}}</label>
    <div class="uk-form-controls">
			{{input value=sourceConfig.displayName class="uk-width-1-1" placeholder=(t 'data-props.edit.source.placeholder')}}
			<p class="uk-form-help-block uk-text-muted">{{t 'data-props.edit.source.caption'}}</p>
		</div>
	</div>
</fieldset>
